<form method="post" action="/collection/create" id="create-collection-form">
  <label for="name">Title
    <input
      type="text"
      name="name"
      placeholder="Collection Title"
      value="{{name}}"
    />
  </label>
  <label for="description">Description
    <textarea
      form="create-collection-form"
      name="description"
      id="taid"
      cols="35"
      wrap="soft"
    >{{description}}</textarea>
  </label>
  <label for="isTodoList">Is it a Todolist?
    <input type="checkbox" name="isTodoList" checked="true" />
  </label>

  <button type="submit">Create Collection</button>
</form>