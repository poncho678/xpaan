<main id="item">
  {{! conditional rendering if img, img-url, text, url }}

  {{#with item}}
  {{#if url}}<a href="{{url}}" class="" target="_blank">{{/if}}
    {{#if img}}<img src="{{img}}" alt="" />{{/if}}
    {{#if imgUrl}}<img src="{{imgUrl}}" alt="" />{{/if}}
    {{#if url}}</a>{{/if}}
  <section>
    <div class="item__section__wrapper">
      <h1 class="title"><a href="/collection/{{collectionId._id}}" class="inline">&#8592;</a> {{#if title}}{{#if url}}<a
          href="{{url}}" class="inline" target="_blank">{{/if}}{{title}}{{#if url}}</a>{{/if}}
        {{/if}}</h1>
      {{#if url}}<h3 class="title"><a href="{{url}}" target="_blank">{{url}}</a></h3>{{/if}}
      {{#if text}}
      <article>{{text}}</article>
      {{/if}}
      {{#if notes}}
      {{#each notes}}{{/each}}
      {{/if}}
      {{#if collectionId.isTodoList}}
      <form action="/collection/{{collectionId._id}}/item/{{_id}}/update-status" method="post">
        <label for="todo">
          <input type="checkbox" name="todo" value="true" {{#equals completed true}}checked="true" {{/equals}} id=""
            onclick="form.submit()">
        </label>
      </form>
      {{/if}}
    </div>
    <header class="nav__secondary">
      <nav>
        <ul>
          <li>
            <a href="/collection/{{collectionId._id}}/item/{{_id}}/edit">Edit Item</a>
          </li>
        </ul>
      </nav>
    </header>

  </section>
  {{/with}}
</main>